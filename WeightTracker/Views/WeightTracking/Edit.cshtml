@model WeightTracking
@{
    ViewData["Title"] = "Edit";
}

<div>
    <div class="header">
        <h1>Gewicht Eintrag Bearbeiten für @Html.DisplayFor(tracking => tracking.Person.Name)</h1>
    </div>
    <hr/>
    <div class="row">
        <form asp-action="Edit">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" type="date"/>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Weight" class="control-label"></label>
                    <input asp-for="Weight" class="form-control"/>
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
            <div class="col-xs-12">
                <a asp-controller="Home" asp-action="Index" class="btn btn-default" style="margin-right: 12px">Zurück zur Liste</a>
                <input type="submit" value="Speichern" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
@model IEnumerable<Person>
@{
    ViewData["Title"] = "Home Page";
}


<h3>Personen</h3>
<div class="row">
    <div class="col-md-12">
        <div>
            <a asp-action="Create" asp-controller="Person">
                <img id="iconSize" src="~/images/Document/AddNews.png" title="Erstellen"/>
            </a>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SecondName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Street)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Plz)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Place)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Abteilung.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project.Name)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SecondName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plz)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Place)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Abteilung.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.Name)
                    </td>
                    <td>
                        <a asp-controller="Person" asp-action="Edit" asp-route-id="@item.Id">
                            <img id="iconSize" src="~/images/Document/EditNews.png" title="Bearbeiten"/>
                        </a> |
                        <a asp-controller="Person" asp-action="Delete" asp-route-id="@item.Id">
                            <img id="iconSize" src="~/images/Document/DeleteNews.png" title="Löschen"/>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
@model MasterDataViewModel
@{
    ViewData["Title"] = "MasterData";
}

<h2>Stammdaten</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Abteilungen</h3>
        <div>
            <a asp-action="Create" asp-controller="Abteilung">
                <img id="iconSize" src="~/images/Document/AddNews.png" title="Erstellen"/>
            </a>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AbteilungList.First().Name)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.AbteilungList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-controller="Abteilung" asp-action="Edit" asp-route-id="@item.Id">
                            <img id="iconSize" src="~/images/Document/EditNews.png" title="Bearbeiten"/>
                        </a> |
                        <a asp-controller="Abteilung" asp-action="Delete" asp-route-id="@item.Id">
                            <img id="iconSize" src="~/images/Document/DeleteNews.png" title="Löschen"/>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h3>Projekte</h3>
        <div>
            <a asp-action="Create" asp-controller="Project">
                <img id="iconSize" src="~/images/Document/AddNews.png" title="Erstellen"/>
            </a>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectList.First().Name)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.ProjectList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-controller="Project" asp-action="Edit" asp-route-id="@item.Id">
                            <img id="iconSize" src="~/images/Document/EditNews.png" title="Bearbeiten"/>
                        </a> |
                        <a asp-controller="Project" asp-action="Delete" asp-route-id="@item.Id">
                            <img id="iconSize" src="~/images/Document/DeleteNews.png" title="Löschen"/>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
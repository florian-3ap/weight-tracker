@model Person

@{
    ViewData["Title"] = "Create";
}

<h3>Person Erstellen</h3>
<hr/>
<div class="row">
    <form asp-action="Create">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="Id" />*@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondName" class="control-label"></label>
                <input asp-for="SecondName" class="form-control"/>
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control"/>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plz" class="control-label"></label>
                <input asp-for="Plz" class="form-control"/>
                <span asp-validation-for="Plz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place" class="control-label"></label>
                <input asp-for="Place" class="form-control"/>
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Abteilung" class="control-label"></label>
                <select asp-for="Abteilung.Id" asp-items="@ViewBag.AbteilungNameList" class="form-control"></select>
                <input asp-for="Abteilung.Id" class="form-control" type="hidden"/>
                <span asp-validation-for="Abteilung.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project" class="control-label"></label>
                <select asp-for="Project.Id" asp-items="@ViewBag.ProjectNameList" class="form-control"></select>
                <input asp-for="Project.Id" class="form-control" type="hidden"/>
                <span asp-validation-for="Project.Name" class="text-danger"></span>
            </div>
        </div>
        <hr/>
        <div class="col-xs-12">
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary"/>
            </div>
            <div style="float:left">
                <a asp-controller="Home" asp-action="Index">zurück zur Liste</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}